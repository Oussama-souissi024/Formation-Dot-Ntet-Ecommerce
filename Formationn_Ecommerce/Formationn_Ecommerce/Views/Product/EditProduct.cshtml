@model Formationn_Ecommerce.Models.Product.UpdateProductViewModel

@{
    ViewData["Title"] = "Modifier un produit";
}

<form asp-action="EditProduct" method="post" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Edit Product</h1>
        <input asp-for="Id" hidden />
        <!-- Message d'erreur global -->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <hr />
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Catégorie</label>
                    </div>
                    <div class="col-10 pb-3">
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                            <option value="">-- Sélectionner une catégorie --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Description</label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Price</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Image</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="ImageFile" type="file" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="col-5 offset-2">
                        <a asp-action="ProductIndex" class="btn-primary btn form-control">Back to List</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Save Changes" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
            <div class="col-2 ml-auto">
                <img src="@Url.Content("~/images/products/" + Model.ImageUrl)" class="w-100" alt="Product Image" />
                <input asp-for="ImageUrl" hidden />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
